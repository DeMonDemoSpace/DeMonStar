<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.mvp.WeatherActivity">


    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvFl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="体感温度"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvTmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="温度"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvFl" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvWind_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="风向"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvTmp" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvWind_sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="风力"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvWind_dir" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvWind_spd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="风速"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvWind_sc" />


    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvHum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="相对湿度"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvWind_spd" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvPcpn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="降水量"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvWind_sc" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvPres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="大气压强"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvPcpn" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvVis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="能见度"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvPres" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="云量"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvVis" />

    <com.demon.baseui.view.EasyTextView
        android:id="@+id/etvCond_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:etv_isRight="false"
        app:etv_line="dashed"
        app:etv_title="状况描述"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etvCloud" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp16"
        app:fabSize="mini"
        android:src="@drawable/base_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>